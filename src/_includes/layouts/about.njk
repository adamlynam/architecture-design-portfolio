<!doctype html>
<html class="h-100" lang="{{ metadata.language }}">
  <head>
    {% include 'snippets/head.njk' %}
  </head>
  <body>
    {% include 'snippets/navbar.njk' %}
    <main class="container text-center">
      <div class="row justify-content-center">
        {% myProfilePhoto "./src/img/profile.jpg",
        "profile_pic" %}
        <div class="col-10 col-lg-8 col-xl-11"><br>
          <p class="mb-0 fs-3">
            About Me
          </p>
          <div>
            <p class="lead">{{ content | safe }}</p>
          </div>
          <p class=" fs-3 mt-5">
            Printable CV
          </p>
          <p class="fs-6">
            <a target="_blank" href={{ cv_document_url }}>Jess Beale CV</a>
          </p>
          <p class=" fs-3 mt-5">
            Contact
          </p>
          <p class="fs-6 mb-3">{{ email }}</p>
        </div>
      </div>
    </main>
    <footer class="container">
      {% include 'snippets/footer.njk' %}
    </footer>
  </body>
</html>